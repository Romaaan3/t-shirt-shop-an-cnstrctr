
<div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle" style="width: 250px; margin-top: 101px;">

        <%= image_tag "logo.png", class: "uk-margin-bottom"%>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'uk-panel uk-panel-box uk-form'}) do |f| %>
          <div class="uk-form-row">
            <%= f.email_field :email, autofocus: true, class: "uk-width-1-1 uk-form-large", placeholder: "Логин" %>
          </div>

          <div class="uk-form-row">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "uk-width-1-1 uk-form-large", placeholder: "Пароль" %>
          </div>

          <div class="uk-form-row">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "uk-width-1-1 uk-form-large", placeholder: "Повторите пароль" %>
          </div>

          <div class="uk-form-row">
            <%= f.submit "Зарегистрироваться", class: "uk-width-1-1 uk-button uk-button-primary uk-button-large"%>
          </div>
           <div class="uk-form-row uk-text-small">

                  <%= render "devise/shared/links" %>

            </div>



        <% end %>


    </div>
</div>




