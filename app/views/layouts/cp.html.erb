<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    'cp', media: 'all'%>
<!--   <%= stylesheet_link_tag 'uikit.min.css' %>
 -->  <%= javascript_include_tag 'cp'%>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "http://vk.com/js/api/openapi.js" %>
<!--   <%= javascript_include_tag 'uikit.min.js' %>
 -->

</head>
<body>
<nav class="uk-navbar">

    <a class="uk-navbar-brand" href="#">GOPRINT</a>



    <div class="uk-navbar-content uk-navbar-flip  uk-hidden-small">
    <% if user_signed_in? %>
        <%= current_user.email %>

  <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: "uk-button uk-button-danger " %>

<% else %>
  <%= link_to 'Войти', new_user_session_path, class: "uk-button uk-button-success "  %>
<% end %>

    </div>

</nav>
<div class="uk-container">
     <%- unless devise_controller? %>

 <div class="uk-grid">

    <div class="uk-width-3-10">

      <div class="uk-width-medium-1-2 uk-row-first">
        <br>
        <ul class="uk-tab uk-tab-left uk-width-medium-1-1" >
            <li <%- if @title == "Заказы" %> class="uk-active" <% end %>><%= link_to "Заказы", cp_orders_url%></li>
            <li <%- if @title == "Запросы" %> class="uk-active" <% end %>><%= link_to "Запросы", cp_requests_url%></li>
            <li <%- if @title == "Новости" %> class="uk-active" <% end %>><%= link_to "Новости", cp_news_index_url%></li>
            <li <%- if @title == "События" %> class="uk-active" <% end %>><%= link_to "События", cp_events_url%></li>
            <li <%- if @title == "Майки" %> class="uk-active" <% end %>><%= link_to "Майки", cp_products_url%></li>
            <li <%- if @title == "Отзывы" %> class="uk-active" <% end %>><%= link_to "Отзывы", cp_reviews_url%></li>
            <li <%- if @title == "Изображения" %> class="uk-active" <% end %>><%= link_to "Изображения", cp_constructor_images_url%></li>
            <li <%- if @title == "Блоки" %> class="uk-active" <% end %>><%= link_to "Блоки", cp_blocks_url%></li>
        </ul>

      </div>
    </div>
    <div class="uk-width-6-10">
      <%=yield%>

    </div>
</div>
    <% else %>
          <%=yield%>
          <% end %>


</div>

  </body>
