<p id="notice"><%= notice %></p>

<h1>Майки</h1>

<table class="uk-table uk-table-hover uk-animation-fade">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cp_products.each do |cp_product| %>
      <tr>
        <td><%= cp_product.name %></td>
        <td><%= cp_product.description %></td>
        <td><%= link_to 'Показать', cp_product_url(cp_product) %></td>
        <td><%= link_to 'Ред.', edit_cp_product_path(cp_product) %></td>
        <td><%= link_to 'Удалить', cp_product_url(cp_product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="uk-grid">

<div class="uk-width-1-1">
<div class="nav">
    <%= will_paginate @cp_products, renderer: BootstrapPagination::Rails %>

</div>
</div>

</div>

<br>

<%= link_to 'Добавить майку', new_cp_product_path %>
