<p id="notice"><%= notice %></p>

<h1>Отзывы</h1>

<table class="uk-table uk-table-hover uk-animation-fade">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Причина</th>
      <th>Коммент</th>
      <th>Активен</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cp_reviews.each do |cp_review| %>
      <tr>
        <td><%= cp_review.name %></td>
        <td><%= cp_review.cause %></td>
        <td><%= cp_review.comment %></td>
        <td>
        <%- if cp_review.isValid %>
        <%= link_to( 'Да | деакт.', deactivate_cp_review_path(cp_review))%>
        <%- else %>
        <%= link_to('Нет | акт.', activate_cp_review_path(cp_review))%>
        <% end%>
        </td>
        <td><%= link_to 'Показать', cp_review_path(cp_review) %></td>
        <td><%= link_to 'Ред.', edit_cp_review_path(cp_review) %></td>
        <td><%= link_to 'Удалить', cp_review_path(cp_review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="uk-grid">

<div class="uk-width-1-1">
<div class="nav">
    <%= will_paginate @cp_reviews, renderer: BootstrapPagination::Rails %>

</div>
</div>

</div>


<br>

<%= link_to 'Добавить отзыв', new_cp_review_path %>
