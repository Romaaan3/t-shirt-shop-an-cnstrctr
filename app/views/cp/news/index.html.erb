<p id="notice"><%= notice %></p>

<h1>Новости</h1>

<table class="uk-table uk-table-hover uk-animation-fade ">
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Анонс</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cp_news.each do |cp_news| %>
      <tr>
        <td><%= cp_news.title %></td>
        <td><%= cp_news.anons %></td>
        <td><%= link_to 'Показать', cp_news_path(cp_news) %></td>
        <td><%= link_to 'Ред.', edit_cp_news_path(cp_news) %></td>
        <td><%= link_to 'Удалить', cp_news_path(cp_news), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="uk-grid">

<div class="uk-width-1-1">
<div class="nav">
    <%= will_paginate @cp_news, renderer: BootstrapPagination::Rails %>

</div>
</div>

</div>
<br>

<%= link_to 'Добавить новость', new_cp_news_path %>
