<div class="uk-container">
<%= simple_form_for [:cp, @cp_news], html: { multipart: true, :class => 'uk-form' } do |f| %>
  <% if @cp_news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cp_news.errors.count, "error") %> prohibited this cp_news from being saved:</h2>

      <ul>
      <% @cp_news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="uk-form-row">
    <%= f.label "Заголовок" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="uk-form-row">
    <%= f.label "Анонс" %><br>
    <%= f.text_area :anons %>
  </div>
  <div class="uk-form-row">
    <%= f.label "Описание" %><br>

    <%= f.text_area :description, :class => "tinymce", :rows => 30 %>
  </div>
  <div class="actions uk-form-row">
    <%= f.submit "Создать" %>
  </div>
<% end %>
</div>
<%= tinymce :language => "ru" %>
