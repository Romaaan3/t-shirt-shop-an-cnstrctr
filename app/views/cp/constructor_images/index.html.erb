<p id="notice"><%= notice %></p>

<h1>Фото в конструкторе</h1>

<table>
  <thead>
    <tr>
      <tr>Изображение</tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cp_constructor_images.each do |cp_constructor_image| %>
      <tr>
        <td><%= image_tag cp_constructor_image.img.url  %> </td>
        <td><%= link_to 'Показ.', cp_constructor_image_path(cp_constructor_image) %></td>
        <td><%= link_to 'Ред.', edit_cp_constructor_image_path(cp_constructor_image) %></td>
        <td><%= link_to 'Удалить', cp_constructor_image_path(cp_constructor_image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="uk-grid">

<div class="uk-width-1-1">
<div class="nav">
    <%= will_paginate @cp_constructor_images, renderer: BootstrapPagination::Rails %>

</div>
</div>

</div>

<br>

<%= link_to 'New Constructor image', new_cp_constructor_image_path %>
